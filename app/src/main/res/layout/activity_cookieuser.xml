<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.referralsaasquatch.sampleapp.CookieRegisterActivity"
    android:background="#f8f8f8">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight=".25"
        android:text="Sign up for SaaS as a Cookie User"
        android:textAlignment="center"
        android:textColor="#094f90"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight=".25"
        android:gravity="bottom"
        android:text="Hi, my name is"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/cookie_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:hint="first"
        android:singleLine="true" />

    <EditText
        android:id="@+id/cookie_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:hint="last"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight=".25"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/cookie_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:hint="email@example.com"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight=".25"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:text="Password:"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/cookie_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight=".25"
        android:hint="password"
        android:inputType="textPassword"
        android:password="false" />

    <EditText
        android:id="@+id/cookie_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight=".25"
        android:hint="repeat password"
        android:inputType="textPassword"
        android:password="false" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight=".25"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:text="Referral Code:"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/cookie_referralcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:gravity="left"
        android:hint="BOBTESTERSON"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25"
        android:text="referralcode reward"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#38B7B4" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25" />

    <Button
        android:id="@+id/CookieUserSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight=".25"
        android:background="#0e6eb0"
        android:elevation="0dp"
        android:onClick="createCookieUserButton"
        android:text="Sign me up!"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25" />
</LinearLayout>