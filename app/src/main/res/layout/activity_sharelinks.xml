<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.referralsaasquatch.sampleapp.ShareLinksActivity"
    android:background="#f8f8f8">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select a ShareLink"
        android:id="@+id/sharelink_textview_signup"
        android:textAlignment="center"
        android:textColor="#094f90"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01" />

    <TextView
        android:id="@+id/engagement_textview_namelabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:text="Select an Engagement Medium "
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/engagement_linearlayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/engagement_spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="130dp" />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00" />


    <TextView
        android:id="@+id/signup_textview_emaillabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.00"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:text="Select a Share Medium"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/shareMedium_linearlayout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/shareMedium_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:paddingLeft="130dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_linearlayout_password"
        android:weightSum="1">
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00" />

    <ScrollView
        android:id="@+id/textAreaScroller"
        android:layout_width="fill_parent"
        android:layout_height="173px"
        android:layout_weight="0.03"
        android:layout_x="0px"
        android:layout_y="25px"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/links_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <Button
        android:id="@+id/sharelink_button"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#0e6eb0"
        android:elevation="0dp"
        android:onClick="createShareLinkButton"
        android:text="Get my Link!"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</LinearLayout>

